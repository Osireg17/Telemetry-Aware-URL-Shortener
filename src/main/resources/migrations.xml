<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="1" author="developer">
        <createTable tableName="links">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="long_url" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="short_code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="links" indexName="idx_short_code">
            <column name="short_code"/>
        </createIndex>
    </changeSet>

    <changeSet id="2" author="developer">
        <addColumn tableName="links">
            <column name="click_count" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Fix short_code column size if it exists and is too small -->
    <changeSet id="3" author="developer">
        <modifyDataType tableName="links" columnName="short_code" newDataType="VARCHAR(50)"/>
    </changeSet>

    <changeSet id="4" author="developer">
        <createTable tableName="clicks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="link_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="click_timestamp" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_agent" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="ip_address" type="VARCHAR(45)">
                <constraints nullable="true"/>
            </column>
            <column name="referer" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="clicks" baseColumnNames="link_id"
                                 constraintName="fk_clicks_link_id"
                                 referencedTableName="links" referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <createIndex tableName="clicks" indexName="idx_link_id">
            <column name="link_id"/>
        </createIndex>

        <createIndex tableName="clicks" indexName="idx_timestamp">
            <column name="click_timestamp"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>